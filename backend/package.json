{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend",
  "type": "module",
  "main": "server.js",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "dotenv -e .env -- nodemon server.js",
    "start:local": "dotenv -e .env -- node server.js",
    "start": "dotenv -e .env.production -- node server.js",
    "migrate:dev": "dotenv -e .env -- prisma migrate dev",
    "migrate:prod": "dotenv -e .env.production -- prisma migrate deploy",
    "prisma:generate": "dotenv -e .env -- prisma generate",
    "prisma:push": "dotenv -e .env -- prisma db push",
    "prisma:studio": "dotenv -e .env -- prisma studio",
    "studio:prod": "dotenv -e .env.production -- prisma studio",
    "prisma:reset": "dotenv -e .env -- prisma migrate reset --force",
    "test": "cross-env NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest",
    "test:watch": "npm test -- --watchAll",
    "test:coverage": "npm test -- --coverage --collectCoverageFrom='/**/*.js'",
    "lint": "eslint tests --ext .js --fix --max-warnings=0",
    "format": "prettier --write '/**/*.{js,json}' 'tests/**/*.{js,json}'",
    "clean": "rimraf dist node_modules/.cache",
    "prepare": "husky install && prisma generate",
    "docker:build": "docker build -t backend .",
    "docker:run": "docker run -p 3000:3000 --env-file .env backend"
  },
  "dependencies": {
    "@babel/runtime": "^7.23.0",
    "@neondatabase/serverless": "^1.0.1",
    "@prisma/client": "^6.12.0",
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "cloudinary": "^2.7.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-stringify": "^6.6.0",
    "dotenv": "^17.2.0",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "nodemailer": "^7.0.5",
    "nodemon": "^3.1.10",
    "path-to-regexp": "^8.2.0",
    "pdfmake": "^0.2.20",
    "postgres": "^3.4.7",
    "reflect-metadata": "^0.2.1",
    "rimraf": "^5.0.5",
    "tsyringe": "^4.8.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.0",
    "@babel/plugin-transform-runtime": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^10.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.5",
    "prisma": "^6.12.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1",
      "^@config/(.*)$": "<rootDir/config/$1"
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
